<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:text="Temperatura para converção"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/edTemperatura"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:ems="10"
            android:hint="Insira a temperatura para converção"
            android:inputType="numberDecimal"
            android:textSize="20sp" />

        <RadioButton
            android:id="@+id/rbtnCelsius"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20sp"
            android:text="Celsius"
            android:textSize="20sp" />

        <RadioButton
            android:id="@+id/rbtnFahrenheit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20sp"
            android:text="Fahrenheit"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/resposta"
            android:layout_width="match_parent"
            android:layout_height="82dp"
            android:layout_marginTop="20sp"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btnConverter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40sp"
            android:text="Converter"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btnLimparTela"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40sp"
            android:onClick="limparValores"
            android:text="Limpar Tela" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>